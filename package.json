{
  "name": "ethernet-json-parser",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"cd frontend && npm run dev\" \"cd server && node app.js\" ",
    "startAll": "concurrently \"cd frontend && npm run dev\" \"cd server && node app.js\" \"electron .\" ",
    "dev": "electron .",
    "test": "electron app.js",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "build": {
    "productName": "ELECTROSMITH",
    "appId": "kr.co.balhyo.www",
    "asar": true,
    "protocols": {
      "name": "productTest",
      "schemes": [
        "productTest"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "/assets/icons/electrosmith"
    },
    "dmg": {
      "title": "tournant",
      "icon": "/assets/icons/electrosmith"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "/assets/icons/electrosmith"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "/assets/icons/electrosmith"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "en_US",
        "ko_KR"
      ],
      "language": "1042"
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "build/",
      "app": "."
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "child_process": "^1.0.2",
    "concurrently": "^7.6.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "redux": "^4.2.1"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1"
  }
}
